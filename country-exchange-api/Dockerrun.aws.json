{
  "AWSEBDockerrunVersion": "1",
  "Image": {
    "Name": "YOUR_ECR_IMAGE_URI",
    "Update": "true"
  },
  "Ports": [
    {
      "ContainerPort": "8000"
    }
  ],
  "Environment": [
    {
      "Name": "DATABASE_URL",
      "Value": ""
    },
    {
      "Name": "COUNTRIES_API",
      "Value": "https://restcountries.com/v2/all?fields=name,capital,region,population,flag,currencies"
    },
    {
      "Name": "EXCHANGE_API",
      "Value": "https://open.er-api.com/v6/latest/USD"
    },
    {
      "Name": "ALLOWED_ORIGINS",
      "Value": "*"
    }
  ]
}

